<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dchya24.submission4">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <permission android:name="com.example.dchya24.submission4.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.example.dchya24.submission4.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MovieDetailActivity" />
        <activity android:name=".views.TvShowDetailActivity" />

        <receiver android:name=".widget.MovieFavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/movie_favorite_widget_info" />
        </receiver>

        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name=".settings.SettingActivity"
            android:label="@string/empty_text" />
        <activity
            android:name=".views.FavoriteActivity"
            android:label="@string/favorite" />
        <activity
            android:name=".views.SearchActivity"
            android:label="@string/searching"/>
        
        <provider
            android:authorities="com.example.dchya24.submission4"
            android:name=".providers.MovieContentProvider"
            android:exported="true"
            android:readPermission="com.example.dchya24.submission4.READ_DATABASE"
            android:writePermission="com.example.dchya24.submission4.WRITE_DATABASE"/>

        <provider
            android:authorities="com.example.dchya24.submission4"
            android:name=".providers.TvShowContentProvider"
            android:exported="true"
            android:readPermission="com.example.dchya24.submission4.READ_DATABASE"
            android:writePermission="com.example.dchya24.submission4.WRITE_DATABASE"/>

        <receiver
            android:name=".reminder.ReminderUser"
            android:enabled="true"
            android:exported="true"/>

        <receiver
            android:name=".reminder.ReminderMovieRelease"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>